{{ forms.textField({
	label: 'Absolute Binary Path of wkhtmltosnapshot lib',
	instructions: '/usr/local/bin/wkhtmltosnapshot',
	id: 'snapshotBinPath',
	name: 'snapshotBinPath',
	value: settings['snapshotBinPath']})
}}

{{ forms.textField({
	label: 'Absolute Binary Path of wkhtmltoimage lib',
